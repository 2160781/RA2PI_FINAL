<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ra2pi_beta">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera2" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RA2PI_BETA">
        <activity android:name=".administradores.CreateTarefaActivity"></activity>
        <activity android:name=".administradores.CreatePlanoActivity" />
        <activity android:name=".administradores.CreateUserActivity" />
        <activity android:name=".administradores.ViewListTarefasPlanoUtilizadorActivity" />
        <activity android:name=".administradores.ViewListPlanosUtilizadorActivity" />
        <activity android:name=".administradores.MainAdministradoresActivity" />
        <activity android:name=".funcionarios.ListaPlanosActivity" />
        <activity android:name=".funcionarios.PlanoQRCodeActivity" />
        <activity android:name=".funcionarios.LoginQRCodeActivity" />
        <activity android:name=".funcionarios.NavegacaoVozActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".funcionarios.TarefasActivity" />
        <activity android:name=".PlayActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>